<%-include('../partials/header.ejs')%>
    <link rel="stylesheet" href="../style/social.css">
    <link rel="stylesheet" href="../style/profile.css">
    <%-include('../partials/nav.ejs')%>
    <main>
        <div class="container">
            <div class="profile_form">
                <div class="user_profile">
                    <div class="user_info">
                        <div class="profile_img">
                            <div class="img">
                                    <%if(userd.image.img_url){%>
                                        <img src="<%=userd.image.img_url%>"
                                            alt="">
                                    <%}else{%>
                                        <img src="/detail/unknow.png" alt="">
                                    <%}%>
                                    <label for="change">
                                <div class="change_ava">
                                        <div class="change_title">
                                            <p>Change avatar</p>
                                        </div>
                                        <input id="change" type="file" onchange="displayImg()">
                                    </div>
                                </label>
                            </div>
                        </div>
                        <div class="user_name">
                            <h2><%=userd.username%></h2>
                        </div>
                        <div class="user_name">
                            <p><%=moment(userd.dateCreate).format('Do MMMM, YYYY')%></p>
                        </div>
                        <div class="btnOption">
                            <div class="follow">
                                <a href="">Follow</a>
                            </div>
                            <div class="message">
                                <a href="">Message</a>
                            </div>
                        </div>
                    </div>
                    <div class="user_posts">
                        <div class="figures">
                            <h2>User Posts</h2>
                            <div class="list_posts">
                                <%posts.forEach(post=>{%>
                                    <div class="user_post">
                                        <div class="form_post list_post">
                                            <div class="about_user">
                                                <div class="option_img user_img">
                                                    <%if(post.user.image.img_url){%>
                                                        <img src="<%=post.user.image.img_url%>"
                                                            alt="">
                                                    <%}else{%>
                                                        <img src="/detail/unknow.png" alt="">
                                                    <%}%>
                                                </div>
                                                <div class="user_info">
                                                    <span><%=post.user.username%></span>
                                                    <p class="time_line"><%=moment(post.dayPost).format('Do MMMM, YYYY')%></p>
                                                </div>
                                            </div>
                                            <div class="userTitle">
                                                <%=post.title%>
                                            </div>
                                            <div class="main_img">
                                                <%post.images.forEach(image=>{%>
                                                    <div class="user_imgs">
                                                        <img src="<%=image.url%>" alt="">
                                                    </div>    
                                                <%})%>
                                            </div>
                                        </div>
                                    </div>                                
                                <%})%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        let pro_img = document.querySelector('.img img');
        let file = document.querySelector('#change');
        function displayImg() {
        let [image] = file.files;
        console.log(image);
        pro_img.src = URL.createObjectURL(image);
}
</script>
<%-include('../partials/footer.ejs')%>
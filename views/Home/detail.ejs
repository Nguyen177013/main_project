                    </div>
                <%})%>
            </div>
        </div>
        <div class="container list_info">
            <div class="detail_fig">
                <div class="fig_info">
                    <h3>Character</h3>
                    <%figure.character.forEach(char=>{%>
                        <a href="/character/<%=char._id%>"><%=char.name%></a>
                    <%})%>
                </div>
                <div class="fig_info">

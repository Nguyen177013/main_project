            <a href="<%=figure.images[0]%>" class="main_img MagicZoom">
                <img src="<%=figure.images[0]%>" alt="">
            </a>
            <div class="sub_imgs">
                <%figure.images.forEach(img=>{%>
                    <div class="child_img">

<%-include('../partials/header.ejs')%>
<link rel="stylesheet" href="../style/items.css">
<%-include('../partials/nav.ejs')%>
<main>
    <section class="detail_fig detail">
        <div class="container list_info">
            <div class="detail_fig">
                <div class="fig_info">
                    <h2>Characters</h2>
                </div>
            </div>
        </div>
    </section>
    <section class="detail">
        <div class="content info">
            <div class="figures">
                <%characters.forEach(character=>{%>
                <div class="figure_detail">
                    <a href="/character/<%=character._id%>">
                        <%if(character?.image){%>
                            <img src="<%=character.image%>" alt="">
                        <%}else{%>
                            <img src="/imgs/detail/empty.png" alt="">
                        <%}%>
                    </a>
                    <h5 class="about_figure">
                        <%=character.name%>
                    </h5>
                </div>
            <%})%>
            </div>
        </div>
    </section>
</main>
<%-include('../partials/footer.ejs')%>